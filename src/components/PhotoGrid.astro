---
interface Props {
  images: Array<{
    src: string;
    date?: Date;
    place?: string;
  }>;
}

const { images } = Astro.props;

const formatDate = (date: Date | undefined) => {
  if (!date) return '';
  return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
};
---

<section id="all-photos" class="mt-12 pt-8 border-t border-stone-100">
  <h2 class="text-sm font-medium text-stone-400 mb-6 uppercase tracking-wider">All Photos</h2>
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-1">
    {images.map((image) => (
      <div class="group relative aspect-square overflow-hidden">
        <img
          src={image.src}
          alt={image.place || ''}
          class="w-full h-full object-cover cursor-zoom-in hover:opacity-90 transition-opacity lightbox-trigger"
        />
        {(image.place || image.date) && (
          <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/50 to-transparent p-2 opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none">
            <p class="text-white text-xs truncate">
              {image.place && <span>{image.place}</span>}
              {image.place && image.date && <span> Â· </span>}
              {image.date && <span>{formatDate(image.date)}</span>}
            </p>
          </div>
        )}
      </div>
    ))}
  </div>
</section>
